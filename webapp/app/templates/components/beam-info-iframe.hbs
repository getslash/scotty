{{#if beam.back}}
<button class="btn" {{action "back"}}>&lt; Back</button><br/><br/>
{{/if}}
<table class="layout-table">
  <tr>
    <td style="width: 10%; vertical-align: top">
      {{#link-to "beam" beam.model.id (query-params view="") target="_blank"}}<img style="height: 64px" src="/static/assets/img/scotty.png">&nbsp;View in Scotty{{/link-to}}<br/><br/>
      <table class="layout-table">
        <tr><td class="icon-td"><i class="fa fa-user"></i></td><td>{{beam.model.initiator.display_name}}</td></tr>
        <tr><td class="icon-td"><i class="fa fa-desktop" alt="user"></i></td><td>{{beam.model.host}}</td></tr>
        <tr>
          <td class="icon-td"><i class="fa fa-clock-o"></i></td>
          <td><a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="{{format-date beam.model.start}}">{{beam.model.relative_time}}</a></td></tr>
        <tr><td class="icon-td"><i class="fa fa-database"></i></td><td>{{capacity-display beam.model.size}}</td></tr>
        <tr>
          <td class="icon-td"><i class="fa fa-thumb-tack"></i></td>
          <td><a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="{{beam.model.pinners}}">{{beam.model.num_of_pins}} users</a></td>
        </tr>
     </table>
     {{#if beam.model.deleted}}
       <br/><p style='font-style: italic'>Deleted.</p>
     {{else}}
       {{#if beam.model.should_display_purge_str}}
         <br/><p style='font-style: italic'>Will be deleted {{beam.model.purge_str}}.</p>
       {{/if}}
     {{/if}}

     {{#if beam.model.error_message}}
     <br/><p class="red-text text-darken-2">{{newlines-text beam.model.error_message}}</p>
     {{/if}}
    </td>
    <td style="width: 90%; padding-left: 20px; vertical-align: top">
      {{#if beam.model.files.length}}
        <table class="layout-table">
        {{#if beam.display_pagination}}
        <tr><td>
          <ul class="pagination">
          {{#each beam.pages as |page|}}
            {{#link-to "beam" beam.model (query-params page=page) tagName="li" class="waves-effect"}}{{page}}{{/link-to}}
          {{/each}}
          </ul>
        </td></tr>
        {{/if}}
        <tr><td>
        <div class="collection">
          {{#each beam.sliced_files as |file|}}
            {{#if file.file_name}}
              {{#if beam.model.deleted}}
                <li class="collection-item">{{file.file_name}}<span class="badge">{{capacity-display file.size}}</span></li>
              {{else}}
                <a class="collection-item file-link" target="_blank" href={{file.url}}>{{file.file_name}}<span class="badge">{{capacity-display file.size}}</span></a>
              {{/if}}
            {{/if}}
          {{/each}}
        </div>
        </td></tr>
        </table>
      {{else}}
        <p>No files were beamed yet.</p>
      {{/if}}
    </td>
  </tr>
</table>
