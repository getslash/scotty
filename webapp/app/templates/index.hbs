<div class="container hide-on-small-and-down">
  <br/>
  <div class="row">
    {{#each beam in this}}
      <div class="col m12 l6">
        {{#link-to "beam" beam}}
        <div class="beam-card">
          <div class="card-content">
            <div class="row">
              <div class="col m8 s12">
                <div class="row">
                <div class="col s12"><i class="mdi-social-person"></i> {{#if beam.initiator.name}}{{beam.initiator.name}}{{else}}...{{/if}}</div>
                  <div class="col s12"><i class="mdi-hardware-desktop-windows"></i> {{beam.host}}</div>
                  <div class="col s12"><i class="mdi-device-access-time"></i> {{format-date beam.start}}</div>
                  <div class="col s12"><i class="mdi-device-data-usage"></i> {{capacity-display beam.size}}</div>
                  <div class="col s12"><i class="mdi-file-folder-open"></i> {{beam.directory}}</div>
                </div>
              </div>
              <div class="col m4 s12">
                <div align="center"><img src="{{beam.img}}" class="responsive-img"></div>
              </div>
            </div>
          </div>
        </div>
        {{/link-to}}
      </div>
    {{/each}}
  </div>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
   {{#link-to "new-beam" class="btn-floating btn-large"}}
     <i class="large mdi-action-backup"></i>
   {{/link-to}}
 </div>
