<div class="container hide-on-small-and-down">
  <br/>
  <div class="row">
    {{#each beam in this}}
      <div class="col m12 l6">
        <div class="beam-card">
          <div class="card-content">
            <div class="row">
              <div class="col m8 s12">
                <table class="layout-table">
                  <tr><td style="text-align: center"><i class="fa fa-user"></i></td><td>{{#if beam.model.initiator.name}}{{beam.model.initiator.name}}{{else}}...{{/if}}</td></tr>
                  <tr><td style="text-align: center"><i class="fa fa-desktop" alt="user"></i></td><td>{{beam.model.host}}</td></tr>
                  <tr><td style="text-align: center"><i class="fa fa-clock-o"></i></td><td>{{format-date beam.model.start}}</td></tr>
                  <tr><td style="text-align: center"><i class="fa fa-database"></i></td><td>{{capacity-display beam.model.size}}</td></tr>
                  <tr><td style="text-align: center"><i class="fa fa-folder"></i></td><td>{{beam.model.directory}}</td></tr>
                  <tr>
                    <td style="text-align: center"><i class="fa fa-thumb-tack"></i></td>
                    <td><a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="{{beam.model.pinners}}">{{beam.model.num_of_pins}} users</a></td>
                  </tr>
               </table>
              </div>
              <div class="col m4 s12">
                {{#link-to "beam" beam.model}}
                <div align="center"><img src="{{beam.model.img}}" class="responsive-img"></div>
                {{/link-to}}
              </div>
            </div>
            {{#unless beam.model.has_pinners}}
              <p style='font-style: italic'>Marked for deletion.</p><br/>
            {{/unless}}
            {{#if session.isAuthenticated}}
              <a {{action "pin" beam.pinned}} class="pin-btn"><i class="fa fa-thumb-tack"></i>&nbsp;{{#if beam.pinned}}Unpin{{else}}Pin{{/if}}</a>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
   {{#link-to "new-beam" class="btn-floating btn-large"}}
     <i class="large mdi-action-backup"></i>
   {{/link-to}}
 </div>
