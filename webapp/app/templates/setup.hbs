<div class="container">
  {{#if model.hasUsers}}
  <p>This site already has users defined in it</p>
  {{else}}
  <div class="row">
    <div class="col-xs-6">
      <form>
        {{#if errors}}
        <div class="alert alert-danger" role="alert">
          {{errors}}
        </div>
        {{/if}}
        <div class="form-group">
          <label for="email">Email Address</label>
          {{input id="email" type="email" value=email class="form-control"}}
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          {{input id="password" type="password" value=password class="form-control"}}
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirm Password</label>
          {{input id="confirm_password" type="password" value=confirm_password class="form-control"}}
        </div>
        <button class="btn btn-default {{if canSubmit '' 'disabled'}}" {{action "submit"}}>Submit</button>
      </form>
    </div>
  </div>
  {{/if}}
</div>

